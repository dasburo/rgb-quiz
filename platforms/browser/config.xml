<?xml version='1.0' encoding='utf-8'?>
<widget id="com.vibramedia.rgb" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>RGBChallenge</name>
    <description>
        Can you match the colors just based on the RGB values?
    </description>
    <author email="kyle@vibramedia.com" href="http://vibramedia.com">
        VibraMedia, LLC
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="BackupWebStorage" value="none" />
</widget>

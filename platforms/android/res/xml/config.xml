<?xml version='1.0' encoding='utf-8'?>
<widget id="com.vibramedia.rgb" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="StatusBar">
        <param name="android-package" onload="true" value="org.apache.cordova.statusbar.StatusBar" />
    </feature>
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
    </feature>
    <name>RGBChallenge</name>
    <description>
        Can you match the colors just based on the RGB values?
    </description>
    <author email="kyle@vibramedia.com" href="http://vibramedia.com">
        VibraMedia, LLC
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <feature name="Game">
        <param name="android-package" value="com.cranberrygame.phonegap.plugin.Game" />
    </feature>
    <feature name="ChromeStorage">
        <param name="android-package" value="org.chromium.ChromeStorage" />
    </feature>
</widget>
